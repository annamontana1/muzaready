{
  "framework": "nextjs",
  "public": false,
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "functions": {
    "app/api/ok/route.ts": {
      "maxDuration": 10
    },
    "app/api/health/route.ts": {
      "maxDuration": 10
    },
    "app/api/ping/route.ts": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/cron/check-low-stock",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/payment-reminders",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/cancel-unpaid",
      "schedule": "0 2 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(ok|health|ping)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    }
  ]
}
